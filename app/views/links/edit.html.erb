<h1>Editing link</h1>

<%= form_for(@link) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :url %><br />
    <%=h @link.url %>
  </p>
  <p>
    <%= f.label :count %><br />
    <%=h @link.count %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @link %> |
<%= link_to 'Back', links_path %>
